## it under the same terms as Perl itself.

use Code::Contribution::Distribution; 

$dir = "." unless $dir; 

unless (@ARGV) { print "$0 -codd=name [list of directories]\n"; exit -1 }
while  (@ARGV) { 

 my $codd = new Code::Contribution::Distribution 
                Package => shift, 
				Codd    => $codd, 
 				Dir     => $dir, 
                Verbose => 1;
 $codd->ownergrep; 

}


